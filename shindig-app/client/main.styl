// Colors and fonts
body
  background-color: color-bg
  fill: color-bg
  color: color-text
  font-family: font
  font-size: 14px

.pad
  padding: 20px 10px

.view
  background-color: color-bg
  overflow-x: hidden

.error
  color: color-error

.layout
  .navbar
    background-color: color-nav
    fill: color-nav
    .title
      color: color-title
      font-size: 24px
    .left, .right
      color: color-button

  .tab-button
    color: color-button

// Animations
animate-slide-up('small-tabbar-transition')
animate-fade('large-tabbar-transition')
animate-fade('login-error')
animate-fade('login-loading')
animate-fade('content-transition')
animate-fade('tabvc')
+above(break)
  animate-fade('navvc-push')
  animate-fade('navvc-pop')
+below(break)
  animate-push('navvc-push')
  animate-pop('navvc-pop')
+above(break)
  animate-delay-fade('nav-left')
  animate-delay-fade('nav-right')
+below(break)
  animate-scale('nav-left')
  animate-scale('nav-right')
animate-fade('nav-title')

animate-scale('modal-backdrop')
+above(break)
  animate-fade('modal')
+below(break)
  animate-slide-up('modal')


animate-fade('fade')


a
  text-decoration: none
  color: inherit

// .icon
