// UI Parameters
break = 750px // the mobile/desktop break point
// font = PTSerif-Regular
font = -apple-system,".SFNSText-Regular","Helvetica Neue","Roboto","Segoe UI",sans-serif
sm-nav-height = 65px
sm-tabbar-height = 50px
status-bar-height = 20px
sm-lr-width = sm-nav-height - status-bar-height // left / right buttons
lg-content-width = 500px
lg-tabbar-width = 300px  // within the navbar
lg-nav-height = 80px
toolbar-row-height = 45px
lg-lr-width = toolbar-row-height // left / right buttons
input-padding = 10px
input-margin = 5px
toolbar-top-padding = 10px
toolbar-bottom-padding = 10px


color-black = rgb(14,14,14)
color-dark = rgb(26,26,26)
color-yellow = rgba(248,231,28,1)
color-green = rgba(94, 222, 78, 1)
color-white = rgba(255,255,255,1)
color-gray = rgba(155,155,155,1)
color-blue = rgba(74,144,226,1)
color-red = #E51E1E

color-nav = color-dark
color-toolbar = color-dark
color-tabbar = color-dark
color-bg = color-black
color-button = color-white
color-title = color-white
color-heading = color-white
color-text = color-white
color-location = color-white
color-time = color-white
color-star = color-yellow
color-error = color-red
color-backdrop = color-bg
color-drawer = color-dark

color-unverified = color-red
color-sub-loading = color-red
color-fb-loading = color-blue
