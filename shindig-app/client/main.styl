.wrap-content
  flex-column()
  margin: 0 auto
  width: 100%
  max-width: lg-content-width

svg.loading.loading
  border: 0
.sub.loading
  border: 1px solid color-sub-loading
  stroke: color-sub-loading
.fb.loading
  border: 1px solid color-fb-loading
  stroke: color-fb-loading
.unverified
  color: color-unverified
  stroke: color-unverified
.shortcut
  color: color-shortcut
  stroke: color-shortcut
